{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FCNN Configuration",
  "type": "object",
  "properties": {
    "dataset_name": {
      "type": "string",
      "enum": ["cure", "ogyei"],
      "description": "The name of the dataset to be used."
    },
    "wb_low_thr": {
      "type": "number",
      "description": "Minimum threshold value for temperature"
    },
    "wb_high_thr": {
      "type": "number",
      "description": "Maximum threshold value for temperature"
    },
    "kernel_size_1": {
      "type": "integer",
      "description": "Size of the kernel of the Gaussian filter."
    },
    "kernel_size_2": {
      "type": "integer",
      "description": "Size of the kernel of the Gaussian filter."
    },
    "brightness_low_thr": {
      "type": "number",
      "description": "Minimum threshold value for brightness."
    },
    "brightness_high_thr": {
      "type": "number",
      "description": "Maximum threshold value for brightness."
    },
    "rotate_1": {
      "type": "integer",
      "description": "Angle of rotation to one direction."
    },
    "rotate_2": {
      "type": "integer",
      "description": "Angle of rotation to the other direction."
    },
    "shift_x_1": {
      "type": "integer",
      "description": "Shift by axis X."
    },
    "shift_y_1": {
      "type": "integer",
      "description": "Shift by axis Y."
    },
    "shift_x_2": {
      "type": "integer",
      "description": "Shift by axis X."
    },
    "shift_y_2": {
      "type": "integer",
      "description": "Shift by axis Y."
    },
    "zoom1": {
      "type": "integer",
      "description": "Amount of zoom."
    },
    "zoom2": {
      "type": "integer",
      "description": "Amount of zoom."
    },
    "scale_pill_img": {
      "type": "number",
      "description": "Amount of scale."
    },
    "number_of_aug_images": {
      "type": "integer"
    },
    "max_workers": {
      "type": "number",
      "description": "Number of CPU threads to use."
    }
  },
  "required": ["dataset_name", "scale_pill_img", "max_workers"]
}