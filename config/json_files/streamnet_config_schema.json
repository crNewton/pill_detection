{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StreamNet Configuration",
  "type": "object",
  "properties": {
    "dataset_type": {
      "type": "string",
      "enum": ["ogyei", "cure"]
    },
    "type_of_net": {
      "type": "string",
      "enum": ["CNN", "EfficientNet"]
    },
    "type_of_stream": {
      "type": "string",
      "enum": ["Contour", "LBP", "RGB", "Texture"]
    },
    "networks": {
      "type": "object",
      "properties": {
        "CNN": {
          "type": "object",
          "properties": {
            "learning_rate": { "type": "number" },
            "image_size": { "type": "integer" }
          }
        },
        "EfficientNet": {
          "type": "object",
          "properties": {
            "learning_rate": { "type": "number" },
            "image_size": { "type": "integer" }
          }
        }
      }
    },
    "mining_type": {
      "type": "string",
      "enum": ["semihard", "hard", "easy"]
    },
    "margin": {
      "type": "number"
    },
    "epochs": {
      "type": "integer"
    },
    "batch_size": {
      "type": "integer"
    },
    "train_valid_ratio": {
      "type": "number"
    },
    "streams": {
      "type": "object",
      "properties": {
        "Contour": {
          "type": "object",
          "properties": {
            "channels": {
              "type": "array",
              "items": {
                "type": "number"
              }
            },
            "embedded_dim": {
              "type": "integer"
            },
            "grayscale": {
              "type": "boolean"
            }
          }
        },
        "LBP": {
          "type": "object",
          "properties": {
            "channels": {
              "type": "array",
              "items": {
                "type": "number"
              }
            },
            "embedded_dim": {
              "type": "integer"
            },
            "grayscale": {
              "type": "boolean"
            }
          }
        },
        "RGB": {
          "type": "object",
          "properties": {
            "channels": {
              "type": "array",
              "items": {
                "type": "number"
              }
            },
            "embedded_dim": {
              "type": "integer"
            },
            "grayscale": {
              "type": "boolean"
            }
          }
        },
        "Texture": {
          "type": "object",
          "properties": {
            "channels": {
              "type": "array",
              "items": {
                "type": "number"
              }
            },
            "embedded_dim": {
              "type": "integer"
            },
            "grayscale": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "weight_decay": {
      "type": "number"
    },
    "step_size": {
      "type": "integer"
    },
    "gamma": {
      "type": "number"
    },
    "load_ref_vector": {
      "type": "boolean"
    }
  },
  "required": ["dataset_type", "type_of_net", "type_of_stream", "networks", "mining_type", "margin", "epochs",
    "batch_size", "train_valid_ratio", "weight_decay", "step_size", "gamma", "load_ref_vector", "streams"]
}
